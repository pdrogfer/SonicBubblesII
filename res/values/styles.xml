<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- Intro Button -->
    <style name="btnIntroNormal" parent="@android:style/Widget.Button">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">0.7</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="btnIntroSmall" parent="@style/btnIntroNormal">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="btnIntroLarge" parent="@style/btnIntroNormal">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="btnIntroXLarge" parent="@style/btnIntroNormal">
        <item name="android:layout_width">460dp</item>
        <item name="android:layout_weight">0.7</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="btnIntroSw600" parent="@style/btnIntroNormal">
        <item name="android:layout_width">320dp</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="btnIntroSw720" parent="@style/btnIntroNormal">
        <item name="android:layout_width">400dp</item>
        <item name="android:layout_weight">0.7</item>
        <item name="android:textSize">40sp</item>
    </style>

    <!-- Demo Arrows Button -->
    <style name="arrowBtnDemoNormal" parent="@android:style/Widget.ImageButton">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:background">@drawable/btn_demo_arrows</item>
    </style>
    <style name="arrowBtnDemoSmall" parent="@style/arrowBtnDemoNormal">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_margin">18dp</item>
    </style>
    <style name="arrowBtnDemoLarge" parent="@style/arrowBtnDemoNormal">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_margin">32dp</item>
    </style>
    <style name="arrowBtnDemoXLarge" parent="@style/arrowBtnDemoNormal">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_margin">48dp</item>
    </style>
    <style name="arrowBtnDemoSw600" parent="@style/arrowBtnDemoNormal">
        <item name="android:layout_width">52dp</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:layout_margin">40dp</item>
    </style>
    <style name="arrowBtnDemoSw720" parent="@style/arrowBtnDemoNormal">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_margin">58dp</item>
    </style>
    
    <!-- Demo Radio Buttons -->
    <style name="radBtnDemoNormal" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@drawable/rad_btn_demo_selector</item>
        <item name="android:onClick">onRadioButtonClicked</item>
        <item name="android:padding">6dp</item>
    </style>

    <style name="radBtnDemoSmall" parent="@style/radBtnDemoNormal">
        <item name="android:padding">4dp</item>
    </style>

    <style name="radBtnDemoLarge" parent="@style/radBtnDemoNormal">
        <item name="android:padding">6dp</item>
    </style>

    <style name="radBtnDemoXLarge" parent="@style/radBtnDemoNormal">
        <item name="android:padding">6dp</item>
    </style>

    <style name="radBtnDemoSw600" parent="@style/radBtnDemoNormal">
        <item name="android:padding">6dp</item>
    </style>

    <style name="radBtnDemoSw720" parent="@style/radBtnDemoNormal">
        <item name="android:padding">8dp</item>
    </style>

    <!-- Game Text Buttons -->
    <style name="GameTextNormal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="GameTextSmall" parent="@style/GameTextNormal">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="GameTextLarge" parent="@style/GameTextNormal">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="GameTextXLarge" parent="@style/GameTextNormal">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="GameTextSw600" parent="@style/GameTextNormal">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="GameTextSw720" parent="@style/GameTextNormal">
        <item name="android:textSize">30sp</item>
    </style>

    <!-- Demo Image View -->
    <style name="demoImageView">

        <!-- 3dp so the background border to be visible -->
        <item name="android:padding">3dp</item>
        <item name="android:background">@drawable/image_border</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

</resources>