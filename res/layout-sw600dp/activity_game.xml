<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFFFF"
    android:orientation="vertical"
    tools:context=".HighScores" >

    <!-- buttons on the upper part of the screen -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="2dp"
        android:background="#FFFFFFFF"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnListenAgain"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:background="@android:drawable/btn_default"
            android:text="@string/listen_again"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/scoreView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/tv_score"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/lifeView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/tv_life"
            android:textSize="24sp" />
    </LinearLayout>

    <!-- drawing area -->

    <pgf.sonicbubblesii.DrawingView
        android:id="@+id/drawing"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:background="@drawable/fondo1" />

    <!-- Level and Round info on the lower part of the screen -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="#FFFFFFFF"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvLevel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/tv_level"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tvRound"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/tv_round"
            android:textSize="24sp" />
    </LinearLayout>

</LinearLayout>