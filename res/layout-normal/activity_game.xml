<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFFFF"
    android:orientation="vertical"
    tools:context=".HighScores" >

    <!-- buttons on the upper part of the screen -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:background="#FFFFFFFF"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnListenAgain"
            style="@style/GameTextNormal"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_weight="1.5"
            android:background="@drawable/btn_sel_grey"
            android:text="@string/listen_again"
            android:textColor="@color/White" />

        <TextView
            android:id="@+id/scoreView"
            style="@style/GameTextNormal"
            android:layout_weight="1"
            android:text="@string/tv_score" />

        <TextView
            android:id="@+id/lifeView"
            style="@style/GameTextNormal"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text="@string/tv_life" />
    </LinearLayout>

    <!-- drawing area -->

    <pgf.sonicbubblesii.DrawingView
        android:id="@+id/drawing"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1" />
    <!-- Level and Round info on the lower part of the screen -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="36dp"
        android:background="#FFFFFFFF"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvLevel"
            style="@style/GameTextNormal"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text="@string/tv_level" />

        <TextView
            android:id="@+id/tvRound"
            style="@style/GameTextNormal"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text="@string/tv_round" />
    </LinearLayout>

</LinearLayout>