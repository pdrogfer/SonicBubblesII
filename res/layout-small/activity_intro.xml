<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".IntroActivity" >

    <TextView
        android:id="@+id/tVwTitle"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:layout_weight="1"
        android:text="@string/app_name"
        android:textSize="36sp" />
    
    <TextView
        android:id="@+id/tVwVersion"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:layout_weight="0.7"
        android:text="@string/version_number"
        android:textStyle="italic"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/intro_image"
        android:layout_width="180dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_weight="3"
        android:contentDescription="@string/sonic_bubbles_logo"
        android:src="@drawable/intro_logo" />

    <Button
        android:id="@+id/btnStartGame"
        android:layout_width="210dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="@android:drawable/btn_default"
        android:text="@string/btn_start_game" />

    <Button
        android:id="@+id/btnHowToPlay"
        android:layout_width="210dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="3dp"
        android:layout_weight="1"
        android:background="@android:drawable/btn_default"
        android:text="@string/how_to_play" />
    <Button
        android:id="@+id/btnHighScores"
        android:layout_width="210dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="3dp"
        android:layout_weight="1"
        android:background="@android:drawable/btn_default"
        android:text="@string/btn_high_scores" />

</LinearLayout>